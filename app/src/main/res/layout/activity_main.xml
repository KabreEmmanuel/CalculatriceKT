<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/C"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".MainActivity"
    tools:ignore="HardcodedText">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@color/blackbord"
        android:padding="20dp">

        <TextView
            android:id="@+id/workingTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="45sp"
            app:layout_constraintBottom_toBottomOf="@+id/resultsTV"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/resultsTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:lines="1"
            android:maxLines="1"
            android:text=""
            android:textAlignment="textEnd"
            android:textColor="@color/white"
            android:textSize="25sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.6"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:background="@color/buttonBorder"
            android:onClick="allClearAction"
            android:text="AC" />

        <Button
            style="@style/buttonNumber"
            android:background="@color/buttonBorder"
            android:onClick="backSpaceAction"
            android:text="DEL" />

        <Button
            style="@style/buttonOperator"
            android:background="@color/buttonBorder"
            android:text="%" />

        <Button
            style="@style/buttonOperator"
            android:background="@color/buttonBorder"
            android:text="รท" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:text="7"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonNumber"
            android:text="8"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonNumber"
            android:text="9"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonOperator"
            android:background="@color/buttonBorder"
            android:text="x"
            android:textSize="20sp"
            app:cornerRadius="0dp" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:text="4"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonNumber"
            android:text="5"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonNumber"
            android:text="6"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonOperator"
            android:background="@color/buttonBorder"
            android:text="-" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/buttonNumber"
            android:text="1"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonNumber"
            android:text="2"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonNumber"
            android:text="3"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonOperator"
            android:background="@color/buttonBorder"
            android:text="+" />

    </LinearLayout>

    <LinearLayout style="@style/buttonRow">

        <Button
            style="@style/negative"
            android:onClick="negativeBouton"
            android:text="(-/+)"
            android:background="@color/background"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonNumber"
            android:text="0"
            app:cornerRadius="0dp" />

        <Button
            style="@style/buttonNumber"
            android:text="."
            app:cornerRadius="0dp" />

        <Button
            android:id="@+id/egale"
            style="@style/buttonOperator"
            android:background="@color/buttonegal"
            android:onClick="equalAction"
            android:textSize="60sp"
            android:text="=" />

    </LinearLayout>



</LinearLayout>